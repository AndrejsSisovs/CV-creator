@model CV_creator.Models.BasicInformation

@{
    ViewData["Title"] = "CV Preview";
}

<div class="cv-preview">
    <h1>@Model.FirstName @Model.LastName</h1>
    <p>Email: @Model.Email | Phone: @Model.PhoneNumber</p>
    <p>Birth Date: @Model.BirthDate.ToShortDateString()</p>

    <h2>Education</h2>
    <ul>
        @foreach (var edu in Model.Educations)
        {
            <li>
                <strong>@edu.InstitutionName</strong> - @edu.FieldOfStudy
                <br />
                @edu.EducationLevel | @edu.Status | @edu.StartTime.ToShortDateString() - @(edu.EndTime.HasValue ? edu.EndTime.Value.ToShortDateString() : "Present")
            </li>
        }
    </ul>

    <h2>Work Experience</h2>
    <ul>
        @foreach (var job in Model.Jobs)
        {
            <li>
                <strong>@job.Title</strong> - @job.PositionHeld
                <br />
                @job.EmploymentType | @job.StartTime.ToShortDateString() - @(job.EndTime.HasValue ? job.EndTime.Value.ToShortDateString() : "Present")
                <ul>
                    @foreach (var sa in job.Skills)
                    {
                        <li>@sa.Type: @sa.Description</li>
                    }
                </ul>
            </li>
        }
    </ul>

    <button onclick="window.print()" class="btn btn-primary">Print CV</button>
</div>


