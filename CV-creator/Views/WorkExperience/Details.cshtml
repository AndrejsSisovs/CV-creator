@model WorkExperienceWithSkills

<h1>Work Experience Details</h1>

<div>
    <h3>@Model.WorkExperience.Title - @Model.WorkExperience.PositionHeld</h3>
    <p>@Model.WorkExperience.EmploymentType</p>
    <p>Start: @Model.WorkExperience.StartTime?.ToString("yyyy-MM-dd")</p>
    <p>End: @Model.WorkExperience.EndTime?.ToString("yyyy-MM-dd")</p>
</div>

<hr />

<h4>Obtained Skills</h4>
<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var skill in Model.Skills)
        {
            <tr>
                <td>@skill.Description</td>
                <td>@skill.Type</td>
                <td>
                    <a asp-action="EditSkill" asp-route-id="@skill.Id" class="btn btn-warning btn-sm">Edit</a>
                    <form asp-action="DeleteSkill" method="post" style="display:inline;">
                        <input type="hidden" name="skillId" value="@skill.Id" />
                        <input type="hidden" name="workExperienceId" value="@Model.WorkExperience.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<h4>Add New Skill</h4>
<form asp-action="AddSkill" method="post">
    <div class="form-group">
        <label for="Description">Description</label>
        <input type="text" id="Description" name="NewSkill.Description" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Type">Type</label>
        <input type="text" id="Type" name="NewSkill.Type" class="form-control" />
    </div>
    <input type="hidden" name="WorkExperience.Id" value="@Model.WorkExperience.Id" />
    <button type="submit" class="btn btn-primary">Add Skill</button>
</form>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
