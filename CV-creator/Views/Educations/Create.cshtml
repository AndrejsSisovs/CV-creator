@model CV_creator.Models.Education

@{
    ViewData["Title"] = "Add Education";
}

<h1>Add Education</h1>

<form asp-action="Create" method="post">
    <input type="hidden" name="cvId" value="@ViewBag.CVId" />
    <div class="form-group">
        <label asp-for="InstitutionName" class="control-label"></label>
        <input asp-for="InstitutionName" class="form-control" />
        <span asp-validation-for="InstitutionName" class="text-danger"></span>
    </div>
    <!-- Add other fields similarly -->
    <div class="form-group">
        <label asp-for="FieldOfStudy" class="control-label"></label>
        <input asp-for="FieldOfStudy" class="form-control" />
        <span asp-validation-for="FieldOfStudy" class="text-danger"></span>
    </div>
    <!-- Continue for Faculty, EducationLevel, Status, StartDate, EndDate, Address -->
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Details" asp-controller="CVs" asp-route-id="@ViewBag.CVId" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}